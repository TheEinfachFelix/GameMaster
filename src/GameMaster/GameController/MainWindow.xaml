<Window x:Class="GameController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Hier Level Specific stuff" Background="Beige" Click="Button_Click"/>
        <DockPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Player Information:" TextAlignment="Center" FontSize="20" DockPanel.Dock="Top"/>
            <ListView ItemsSource="{Binding PlayerList}" Name="Playerlist" Background="Aqua" >
                <ListView.Resources>
                    <GridView x:Key="one">
                        <GridViewColumn Header="Punkte" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox PreviewTextInput="NumberValidationTextBox" Text="{Binding Points}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Name" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                    <GridView x:Key="two"/>

                </ListView.Resources>
                <ListView.Style>
                    <Style TargetType="ListView">
                        <!-- Update the Content -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewType}" Value="1">
                                <Setter Property="View" Value="{StaticResource two}" />
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="View" Value="{StaticResource one}" />
                    </Style>
                </ListView.Style>
            </ListView>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1" >
            <TextBlock Text="Level Information:" TextAlignment="Center" FontSize="20" DockPanel.Dock="Top"/>
            <ListView ItemsSource="{Binding LevelList}" Name="Levellist" Background="Aqua">
                <ListView.Resources>
                    <GridView x:Key="one">
                        <GridViewColumn Header="Name" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Beschreibung" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Beschreibung}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                    <GridView x:Key="two"/>

                </ListView.Resources>
                <ListView.Style>
                    <Style TargetType="ListView">
                        <!-- Update the Content -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewType}" Value="1">
                                <Setter Property="View" Value="{StaticResource two}" />
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="View" Value="{StaticResource one}" />
                    </Style>
                </ListView.Style>
            </ListView>
        </DockPanel>
        
    </Grid>
</Window>
